extends ../_priv.pug

block content
  | {% if user.id %}
  div(class="btn-toolbar filter")
    a(href="{{ url_for('list_users') }}", class="btn btn-default") <span class="glyphicon glyphicon-arrow-left"></span> Назад</a>
  | {% endif %}
  form(method="post", action="{{ action }}")
    | {{ form.hidden_tag() }}
    .row
      .col-md-6
        div
          | {{ form.login.label(class="control-label") }}
          | {{ form.login(class="form-control") }}
        div
          h1 {% if user.id %}Сменить пароль{% endif %}
          div
            | {{ form.password.label(class="control-label") }}
            | {{ form.password(class="form-control") }}
          div
            | {{ form.verify_password.label(class="control-label") }}
            | {{ form.verify_password(class="form-control") }}
        div
          | {{ form.name.label(class="control-label") }}
          | {{ form.name(class="form-control") }}
        div
          | {{ form.surname.label(class="control-label") }}
          | {{ form.surname(class="form-control") }}
        div
          | {{ form.role.label(class="control-label") }}
          | {{ form.role(size=8, class="form-control") }}
        div
          input(type="submit", class="btn btn-success", value="Сохранить")
